<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rebuild_psd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.ImproveDisclosureActivity">

    <include
        android:id="@+id/in_head"
        layout="@layout/action_head"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:background="@drawable/layout_click_style"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@mipmap/arrive"
                />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:paddingRight="20dp"
                android:text="天虹商场西丽店"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/right_gray"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_line"/>
        <EditText
            android:id="@+id/et_contact_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="34dp"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入发货人姓名"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_line"/>
        <EditText
            android:id="@+id/et_contact_tel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="34dp"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入发货人电话"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_line"/>
        <EditText
            android:id="@+id/et_loan_money"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="34dp"
            android:background="@null"
            android:textSize="14sp"
            android:hint="请输入代收贷款金额"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_line"/>
        <CheckBox
            android:id="@+id/cb_common_address"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_style"
            android:paddingLeft="10dp"
            android:text="设置为常用地址"
            android:textColor="@color/color_gary_font"/>
        <Button
            android:id="@+id/bt_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_blue_style"
            android:text="@string/ok"
            android:textColor="@color/color_gary_font"/>
    </LinearLayout>
</LinearLayout>
