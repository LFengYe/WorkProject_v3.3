<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:gravity="center">

    <com.guugoo.jiapeiteacher.view.AVLoadingIndicatorView
        android:id="@+id/rv_progressbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:indicator_color="#e76e6e"
        app:indicator_type="Load"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载..."
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/rv_progressbar"
        android:layout_toEndOf="@+id/rv_progressbar"/>


</RelativeLayout>