<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_White"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/include_head"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.guugoo.jiapeiteacher.view.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_head"
                    app:border_color="@color/color_Blue"
                    app:border_width="2dp" />
                <ImageView
                    android:id="@+id/change_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/civ_head"
                    android:layout_alignBottom="@id/civ_head"
                    android:src="@mipmap/change_icon"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/student_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_Black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_name"
                    style="@style/Student_TextView_Style"
                    android:layout_marginLeft="5dp"
                    android:text="@string/student_name" />

                <TextView
                    android:id="@+id/student_sex"
                    style="@style/Student_TextView_Style"
                    android:layout_marginLeft="20dp"
                    android:text="@string/student_sex" />


            </LinearLayout>

            <TextView
                android:id="@+id/student_tel"
                style="@style/Student_TextView_Style"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/student_tel" />

            <TextView
                android:id="@+id/student_cardId"
                style="@style/Student_TextView_Style"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/student_cardId"
                android:visibility="gone"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/student_driverType"
                    style="@style/Student_TextView_Style"
                    android:layout_marginLeft="5dp"
                    android:text="@string/student_driverType" />

                <TextView
                    android:id="@+id/student_bookingCourse"
                    style="@style/Student_TextView_Style"
                    android:layout_marginLeft="15dp"
                    android:text="@string/student_bookingCourse" />
            </LinearLayout>


            <TextView
                android:id="@+id/student_bookingTime"
                style="@style/Student_TextView_Style"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:text="@string/student_bookingTime"
                android:textSize="@dimen/smallerSp" />


        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:background="@color/color_LightGray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/comment_1"
        android:textColor="@color/color_Gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_style"
                android:paddingLeft="10dp"
                android:text="@string/turn"
                android:textColor="@color/color_Black" />

            <RadioGroup
                android:id="@+id/rg_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb0_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/bad"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb0_so_so"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/so_so"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb0_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/good"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb0_better"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/better"
                    android:textColor="@color/color_Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line" />


            <CheckBox
                android:id="@+id/checkbox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_style"
                android:paddingLeft="10dp"
                android:text="@string/s"
                android:textColor="@color/color_Black" />

            <RadioGroup
                android:id="@+id/rg_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb1_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/bad"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb1_so_so"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/so_so"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb1_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/good"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb1_better"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/better"
                    android:textColor="@color/color_Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line" />


            <CheckBox
                android:id="@+id/checkbox_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_style"
                android:paddingLeft="10dp"
                android:text="@string/parking"
                android:textColor="@color/color_Black" />

            <RadioGroup
                android:id="@+id/rg_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb2_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/bad"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb2_so_so"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/so_so"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb2_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/good"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb2_better"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/better"
                    android:textColor="@color/color_Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line" />


            <CheckBox
                android:id="@+id/checkbox_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_style"
                android:paddingLeft="10dp"
                android:text="@string/parkStart"
                android:textColor="@color/color_Black" />

            <RadioGroup
                android:id="@+id/rg_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb3_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/bad"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb3_so_so"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/so_so"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb3_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/good"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb3_better"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/better"
                    android:textColor="@color/color_Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line" />


            <CheckBox
                android:id="@+id/checkbox_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:button="@drawable/check_style"
                android:paddingLeft="10dp"
                android:text="@string/reverseParking"
                android:textColor="@color/color_Black" />

            <RadioGroup
                android:id="@+id/rg_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb4_bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/bad"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb4_so_so"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/so_so"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb4_good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/good"
                    android:textColor="@color/color_Black" />

                <RadioButton
                    android:id="@+id/rb4_better"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radio_style"
                    android:paddingLeft="5dp"
                    android:text="@string/better"
                    android:textColor="@color/color_Black" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_line" />

            <EditText
                android:id="@+id/et_other"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:background="@drawable/et_login_style"
                android:gravity="left"
                android:hint="其他评语"
                android:padding="4dp"
                android:textSize="@dimen/smallSp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_login_style"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/color_Blue"
        android:textSize="@dimen/rightSp" />


</LinearLayout>