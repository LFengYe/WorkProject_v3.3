<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/in_head"
        layout="@layout/action_head"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <cn.com.caronwer.view.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/cir_head"
            app:border_color="@color/white"
            app:border_width="1.5dp" />

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/civ_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/ll_te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tel"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="马师傅"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="未认证"
                android:textColor="@color/back_top"
                android:textSize="15sp" />

        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/ll_te"
            android:layout_marginTop="15dp"
            android:background="@color/color_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/ll_te"
            android:layout_marginTop="10dp"
            android:background="@color/color_gary_bck" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_myOrder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/myOrder"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/biggest_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_myWallet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/myWallet"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/biggest_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_myCar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="我的车辆"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/biggest_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style">

        <TextView
            android:id="@+id/tv_news"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="@string/news"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/biggest_font" />

        <TextView
            android:id="@+id/tv_news_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/num_style"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style">

        <TextView
            android:id="@+id/tv_leftdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:text="我的评分"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/biggest_font" />

        <RatingBar
            android:id="@+id/rb_leftdata"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:isIndicator="true"
            android:max="5" />

        <TextView
            android:id="@+id/tv_fenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#3d3d3d" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_benefit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/benefit_activity"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/biggest_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/layout_click_style"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="设        置"
        android:textColor="#3d3d3d"
        android:textSize="@dimen/biggest_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/color_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_line" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_white" />

</LinearLayout>